<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/outline_lock_black_48"
            android:id="@+id/imageViewLock" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/infoDialog"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/infoDialog"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/buttVerifyEmail" android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.525"
            android:textColor="@android:color/background_dark" android:textAlignment="center"
    />
    <Button
            android:text="Verify"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/buttVerifyEmail" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.53" android:layout_marginBottom="16dp"
            style="@style/Widget.AppCompat.Button" android:backgroundTint="@color/design_default_color_primary"
            android:textColor="@color/common_google_signin_btn_text_dark_default" android:textStyle="bold"
            android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>